@page
@model IndexModel
@{
    ViewData["Title"] = "Vu Solutions";
}

<!-- Hero Section -->
<section id="home" class="hero-section">
    <div class="row align-items-center">
        <div class="col-md-8">
            <div class="intro-section">
                <h1 class="main-title">Crafting Enterprise Solutions with Precision</h1>
                <div class="subtitle-wrapper">
                    <p class="lead">
                        Senior Full-stack Software Engineer specializing in 
                        <span class="hlt">enterprise-grade applications</span> and 
                        <span class="hlt">scalable architectures</span>
                    </p>
                </div>
                <div class="value-proposition">
                    <p>
                        Delivering high-impact solutions through:
                    </p>
                    <ul class="value-list">
                        <li>
                            <i class="fas fa-check-circle"></i>
                            <div class="value-content">
                                <strong>Strategic Technical Leadership</strong>
                                <span>Aligning technology solutions with business objectives</span>
                            </div>
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i>
                            <div class="value-content">
                                <strong>Enterprise Architecture Excellence</strong>
                                <span>SOLID principles and scalable system design</span>
                            </div>
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i>
                            <div class="value-content">
                                <strong>Modern .NET Development</strong>
                                <span>Cloud-native applications and microservices</span>
                            </div>
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i>
                            <div class="value-content">
                                <strong>AI-Enhanced Engineering</strong>
                                <span>Leveraging cutting-edge AI tools for optimal delivery</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="cta-group">
                <a href="#contact" class="btn btn-default primary-cta">
                    <i class="fas fa-paper-plane"></i> Get in Touch
                </a>
                <a href="~/files/Vu-Resume-Latest.pdf" target="_blank" class="btn btn-outline secondary-cta">
                    <i class="fas fa-file-pdf"></i> View Resume
                </a>
            </div>

            <div class="social-links">
                <a href="https://github.com/vohoanvu" target="_blank" class="social-btn">
                    <i class="fab fa-github"></i> GitHub
                </a>
                <a href="https://www.linkedin.com/in/thevuture/" target="_blank" class="social-btn">
                    <i class="fab fa-linkedin"></i> LinkedIn
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <figure class="profile-wrapper">
                <img src="~/images/Vu_upperbody.png" alt="Vo Hoan Vu" class="img-fluid profile-image" />
            </figure>
        </div>
    </div>

    <div class="expertise-banner">
        <div class="tag-cloud">
            <span>ASP.NET Core</span>
            <span>Azure Cloud</span>
            <span>Microservices</span>
            <span>React/TypeScript</span>
            <span>System Integration</span>
            <span>DevOps</span>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about-section">
    <h2>Professional Excellence</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="about-content">
                <p class="lead-text">
                    With over 5 years of industry experience and a Computer Science degree from the University of Oregon,
                    I specialize in building robust, scalable solutions that drive business value.
                </p>
                <div class="expertise-grid">
                    <div class="expertise-card">
                        <i class="fas fa-code"></i>
                        <h3>Technical Excellence</h3>
                        <p>Building maintainable systems using modern architectural patterns and best practices</p>
                    </div>
                    <div class="expertise-card">
                        <i class="fas fa-rocket"></i>
                        <h3>Innovation Focus</h3>
                        <p>Leveraging cutting-edge technologies and AI tools to enhance development efficiency</p>
                    </div>
                    <div class="expertise-card">
                        <i class="fas fa-handshake"></i>
                        <h3>Business Impact</h3>
                        <p>Delivering solutions that provide measurable value and ROI for businesses</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<br />
<br />
<section id="contact" class="contact-section">
    <h2>Let's Connect</h2>
    <div class="contact-info">
        <p class="contact-lead">Ready to discuss your next project?</p>
        <p class="email-display">
            <i class="fas fa-envelope"></i>
            <a href="mailto:vohoanvu96@gmail.com">vohoanvu96@gmail.com</a>
        </p>
        <div class="contact-actions">
            <a href="~/files/Vu-Resume-Latest.pdf" target="_blank" class="btn btn-default resume-btn">
                <i class="fas fa-file-pdf"></i> Download Resume
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
    <script type="application/ld+json">
        {
            "@@context": "https://schema.org",
            "@@type": "ProfessionalService",
            "name": "VU Solutions",
            "description": "Full-Stack Software Engineering Excellence",
            "url": "https://vusolutions.azurewebsites.net",
            "founder": {
                "@@type": "Person",
                "name": "Vo Hoan Vu"
            },
            "address": {
                "@@type": "PostalAddress",
                "addressLocality": "Da Nang",
                "addressCountry": "Vietnam"
            },
            "sameAs": [
                "https://www.linkedin.com/in/thevuture/",
                "https://github.com/vohoanvu"
            ]
        }
    </script>
}

@section Styles {
    <style>
        .social-links {
            margin: 2rem 0;
            display: flex;
            gap: 1rem;
        }

        .social-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background-color: var(--secondary-light);
            color: var(--text-primary);
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-btn:hover {
            background-color: var(--accent-green);
            color: white;
            transform: translateY(-2px);
        }

        .contact-info {
            text-align: center;
            padding: 2rem;
            background-color: var(--secondary-light);
            border-radius: 10px;
            max-width: 500px;
            margin: 0 auto;
        }

        .email-display {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .email-display i {
            color: var(--accent-green);
            margin-right: 0.5rem;
        }

        .resume-btn {
            padding: 1rem 2rem;
            font-size: 1.1rem;
        }

        .resume-btn i {
            margin-right: 0.5rem;
        }

        /* Enhanced Hero Section */
        .hero-section {
            padding: 4rem 0;
            margin-bottom: 2rem;
        }

        .main-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .subtitle-wrapper {
            margin-bottom: 2rem;
        }

        .lead {
            font-size: 1.25rem;
            color: var(--text-secondary);
        }

        .value-proposition {
            margin: 2rem 0;
        }

        .value-list {
            list-style: none;
            padding: 0;
        }

        .value-list li {
            margin: 1rem 0;
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

        .value-list i {
            color: var(--accent-green);
            margin-top: 0.25rem;
        }

        .value-content {
            display: flex;
            flex-direction: column;
        }

        .value-content strong {
            color: var(--text-primary);
            font-size: 1.1rem;
            margin-bottom: 0.25rem;
        }

        .value-content span {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .cta-group {
            display: flex;
            gap: 1rem;
            margin: 2rem 0;
        }

        .primary-cta {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }

        .secondary-cta {
            padding: 0.75rem 1.5rem;
            border: 2px solid var(--accent-green);
            color: var(--accent-green);
            background: transparent;
        }

        .secondary-cta:hover {
            background: var(--accent-green);
            color: white;
        }

        /* Expertise Cards */
        .expertise-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .expertise-card {
            background: var(--secondary-light);
            padding: 2rem;
            border-radius: 10px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .expertise-card:hover {
            transform: translateY(-5px);
        }

        .expertise-card i {
            font-size: 2rem;
            color: var(--accent-green);
            margin-bottom: 1rem;
        }

        .expertise-card h3 {
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        /* Contact Section Enhancement */
        .contact-lead {
            font-size: 1.2rem;
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
        }

        .contact-actions {
            margin-top: 2rem;
        }
    </style>
}